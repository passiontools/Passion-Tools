    <main class="tool-container">
        <div class="tool-header">
            <h1 class="tool-title">Merge PDF Files</h1>
            <p class="tool-subtitle">Combine multiple PDFs into a single document. Drag to reorder.</p>
        </div>

        <div class="upload-area" id="uploadArea">
            <i class="fas fa-file-pdf upload-icon"></i>
            <div class="upload-text">Click or Drag & Drop PDFs</div>
            <div class="upload-subtext">Supports Multiple PDF Files</div>
            <input type="file" id="fileInput" accept="application/pdf" multiple style="display: none;">
        </div>

        <div class="file-list" id="fileList">
            </div>

        <div class="action-area">
            <button class="btn btn-merge" id="mergeBtn" disabled>
                Merge PDFs
            </button>
            <a href="#" class="btn btn-download" id="downloadBtn" download="merged.pdf">
                <i class="fas fa-download"></i> Download Merged PDF
            </a>
            <div class="status-msg" id="statusMsg"></div>
        </div>
    </main>

    <footer>
        <div class="container">
            <p>&copy; 2026 Passion Tools. Secure client-side processing.</p>
        </div>
    </footer>

    <script>
        // DOM Elements
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('fileInput');
        const fileList = document.getElementById('fileList');
        const mergeBtn = document.getElementById('mergeBtn');
        const downloadBtn = document.getElementById('downloadBtn');
        const statusMsg = document.getElementById('statusMsg');

        // State
        let filesArray = [];

        // --- 1. Upload Logic ---
        uploadArea.addEventListener('click', () => fileInput.click());

        // Drag & Drop Visuals
        ['dragenter', 'dragover'].forEach(evt => {
            uploadArea.addEventListener(evt, (e) => {
                e.preventDefault();
                uploadArea.classList.add('dragover');
            });
        });
        ['dragleave', 'drop'].forEach(evt => {
            uploadArea.addEventListener(evt, (e) => {
                e.preventDefault();
                uploadArea.classList.remove('dragover');
            });
        });

        // Drop Handler
        uploadArea.addEventListener('drop', (e) => handleFiles(e.dataTransfer.files));
        fileInput.addEventListener('change', (e) => handleFiles(e.target.files));

        function handleFiles(files) {
            const newFiles = Array.from(files).filter(file => file.type === 'application/pdf');
            
            if (newFiles.length === 0) {
                alert("Please select valid PDF files.");
                return;
            }

            filesArray = [...filesArray, ...newFiles];
            renderFileList();
            updateUI();
        }

        // --- 2. Render & Sort Logic ---
        function renderFileList() {
            fileList.innerHTML = '';
            
            filesArray.forEach((file, index) => {
                const item = document.createElement('div');
                item.className = 'file-item';
                item.draggable = true;
                item.dataset.index = index;

                item.innerHTML = `
                    <div class="drag-handle"><i class="fas fa-grip-vertical"></i></div>
                    <i class="fas fa-file-pdf file-icon"></i>
                    <div class="file-info">
                        <div class="file-name">${file.name}</div>
                        <div class="file-size">${formatBytes(file.size)}</div>
                    </div>
                    <button class="remove-btn" onclick="removeFile(${index})">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                `;

                // Add Drag Events
                addDragEvents(item);
                fileList.appendChild(item);
            });
        }

        function removeFile(index) {
            filesArray.splice(index, 1);
            renderFileList();
            updateUI();
        }

        function updateUI() {
            if (filesArray.length >= 2) {
                mergeBtn.disabled = false;
                mergeBtn.innerHTML = `Merge ${filesArray.length} PDFs`;
            } else {
                mergeBtn.disabled = true;
                mergeBtn.innerHTML = `Add at least 2 PDFs`;
            }
            // Reset download if list changes
            downloadBtn.style.display = 'none';
            mergeBtn.style.display = 'inline-flex';
            statusMsg.textContent = '';
        }

        // --- 3. Drag & Drop Reordering ---
        let dragStartIndex;

        function addDragEvents(item) {
            item.addEventListener('dragstart', () => {
                dragStartIndex = +item.closest('.file-item').dataset.index;
                item.classList.add('dragging');
            });

            item.addEventListener('dragover', (e) => {
                e.preventDefault(); // Necessary to allow dropping
            });

            item.addEventListener('drop', () => {
                const dragEndIndex = +item.closest('.file-item').dataset.index;
                swapItems(dragStartIndex, dragEndIndex);
                item.classList.remove('dragging');
            });

            item.addEventListener('dragend', () => {
                item.classList.remove('dragging');
            });
        }

        function swapItems(fromIndex, toIndex) {
            const itemOne = filesArray[fromIndex];
            filesArray.splice(fromIndex, 1);
            filesArray.splice(toIndex, 0, itemOne);
            renderFileList();
        }

        // --- 4. Merge Logic (PDF-Lib) ---
        mergeBtn.addEventListener('click', async () => {
            if (filesArray.length < 2) return;

            // UI Loading State
            mergeBtn.disabled = true;
            mergeBtn.innerHTML = '<span class="spinner"></span> Processing...';
            statusMsg.textContent = 'Reading files and merging pages...';
            statusMsg.style.color = 'var(--blue)';

            try {
                // Access PDFLib from window (loaded via CDN script)
                const PDFLib = window.PDFLib;
                const mergedPdf = await PDFLib.PDFDocument.create();

                // Loop through files
                for (let file of filesArray) {
                    const arrayBuffer = await file.arrayBuffer();
                    const pdfDoc = await PDFLib.PDFDocument.load(arrayBuffer);
                    const copiedPages = await mergedPdf.copyPages(pdfDoc, pdfDoc.getPageIndices());
                    copiedPages.forEach((page) => mergedPdf.addPage(page));
                }

                // Serialize the PDFDocument to bytes (a Uint8Array)
                const pdfBytes = await mergedPdf.save();

                // Create Download Blob
                const blob = new Blob([pdfBytes], { type: 'application/pdf' });
                const url = URL.createObjectURL(blob);
                
                downloadBtn.href = url;
                downloadBtn.style.display = 'inline-flex'; // Show Green Button
                mergeBtn.style.display = 'none'; // Hide Blue Button
                
                statusMsg.textContent = 'Success! Your file is ready.';
                statusMsg.style.color = 'var(--green)';

            } catch (err) {
                console.error(err);
                statusMsg.textContent = 'Error merging files. Please check if files are corrupted.';
                statusMsg.style.color = 'var(--red)';
                mergeBtn.disabled = false;
                mergeBtn.innerHTML = 'Try Again';
            }
        });

        // Helper: Format Bytes
        function formatBytes(bytes, decimals = 2) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const dm = decimals < 0 ? 0 : decimals;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(dm)) + ' ' + sizes[i];
        }
    </script>
</body>
</html>
